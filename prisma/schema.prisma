generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Employee {
  id String @id @default(uuid())

  name  String
  login String
  password String

  @@map("employees")
}

model Booking {
  id String @id @default(uuid())

  entryDate   DateTime
  departureDate DateTime
  status      String

  @@map("bookings")
}